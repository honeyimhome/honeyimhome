extends ../layout

block content
  .page-header
    h3 Profile Information
    br  
  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    
    .row
      .input-field
        i.material-icons.prefix account_circle
        input.validate(type='text', name='name', id='name')
        label.control-label(for='firstName') First name  
      //- form-group
      //- //-   label.col-sm-3.control-label(for='gravatar') Gravatar
      //- //-   .col-sm-4
      //- //-     img(src="#{user.gravatar()}", class='profile', width='100', height='100')    
    .row
      .input-field
        i.material-icons.prefix email
        input.validate(type='text', name='email', id='email')
        label.control-label(for='email') Email
        
    .row
      .input-field
        i.material-icons.prefix phone
        input.validate(type='tel', name="phone", id="phone")
        label.control-label(for='phone') Phone number
        
    .row
      .input-field
        i.material-icons.prefix accessibility
        label.control-label(for='gender') Gender
          .row
            p
              input#test1(type='radio', checked=user.profile.gender=='male', name='gender', value='male', data-toggle='radio')
              label(for='test1') Male
            p
              input#test2(type='radio',checked=user.profile.gender=='female', name='gender', value='female', data-toggle='radio')
              label(for='test2') Female
    br
    br
    br
    br
    br
    .row
      .input-field
        i.material-icons.prefix language
        input.validate(type='text', name="website", id="webiste")
        label.control-label(for='website') Website
        
    .row
      .input-field
        i.material-icons.prefix record_voice_over
        input.validate(type='text', name="greeting", id="greeting")
        label.control-label(for='greeting') Greeting
        
    .row
      .switch
          i.material-icons.prefix chat
          label.control-label(for="receiveSms" style="margin-left: 15px") Receive SMS
            .row
              p(style="margin-left:5em")
                | Off
                input(id="receiveSms" type='checkbox' name="receiveSms" checked="user.profile.receiveSms")
                span.lever
                |       On
      
    
