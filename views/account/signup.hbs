<div class="page-header">
  <h3>Sign up</h3>
</div><br/>
<form action="/signup" id="signup-form" method="POST" class="form-horizontal">
  <input type="hidden" name="_csrf"/>
  <div class="form-group">
    <div class="row">
      <div class="input-field col-sm-7"><i class="material-icons prefix">account_circle</i>
        <input type="text" name="name" id="name" required="true" class="validate"/>
        <label for="firstName" class="control-label">First name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col-sm-7"><i class="material-icons prefix">email</i>
        <input type="text" name="email" id="email" required="true" class="validate"/>
        <label for="email" class="control-label">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col-sm-7"><i class="material-icons prefix">phone</i>
        <input type="tel" name="phone" id="phone" required="true" class="validate"/>
        <label for="phone" class="control-label">Phone number</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col-sm-7"><i class="material-icons prefix">lock</i>
        <input type="password" name="password" id="password" required="true" class="validate"/>
        <label for="password" class="control-label">Password</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col-sm-7"><i class="material-icons prefix">lock</i>
        <input type="password" name="confirmPassword" id="confirmPassword" required="true" class="validate"/>
        <label for="confirmPassword" class="control-label">Confirm Password</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <button type="submit" class="btn btn-success"><i class="fa fa-user-plus"></i>Signup</button>
    </div>
  </div>
</form>
