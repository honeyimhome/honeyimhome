extends ../layout
block content
	h1 Household
	body
	row
		h3 Create:

		form(action='/household/new', method='POST', enctype="multipart/form-data")
			//- input(type='hidden', name='_csrf', value=_csrf)
			//Enter a household
			.input-field.col.s6
				input( type='text', name='household')
				label.active(for='household') Household

			h5 Upload 5 or more "selfies":
			.form-group(action='#')
				.file-field.input-field
					.btn
						span File
						input(type='file', multiple='', name="selfies")
					.file-path-wrapper
						input.file-path.validate(type='text', placeholder='Upload one or more files')

			button.btn.waves-effect.waves-light(type='submit', name='action')
				| Finish
				i.material-icons.right send
