extends layout
block content
	h1 Household
	body
	row
		h3 Create:
		//Enter a household
		.input-field.col.s6
			input#first_name2.validate( type='text')
			label.active(for='first_name2') Household

		form(action='/household', method='POST')
			//- input(type='hidden', name='_csrf', value=_csrf)
			h3 Join:
			ul.collection
				for house in households
					li.collection-item.avatar
						span.title= house.name
						input(name='household', value=house._id, type='radio',id=house._id)
						label(for=house._id) Red

			h5 Upload 5 or more "selfies":
			.form-group(action='#')
				.file-field.input-field
					.btn
						span File
						input(type='file', multiple='')
					.file-path-wrapper
						input.file-path.validate(type='text', placeholder='Upload one or more files')

			button.btn.waves-effect.waves-light(type='submit', name='action')
				| Finish
				i.material-icons.right send
